<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/lib/com.google.ads"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e8e9ea"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <ListView
        android:id="@+id/listViewNews"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imgBanner"
        android:layout_alignLeft="@+id/imgBanner"
        android:layout_below="@+id/searchEditText"
        android:layout_marginTop="10dp"
        android:background="#FFFFFF"
         >

    </ListView>

    <LinearLayout
        android:id="@+id/imgBanner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
         />

    <TextView
        android:id="@+id/textViewDescription_notificationViewer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/searchEditText"
        android:layout_alignBottom="@+id/searchEditText"
        android:layout_alignRight="@+id/listViewNews"
        android:text="@string/search_label_ar"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"/>

    <EditText
        android:id="@+id/searchEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/listViewNews"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/textViewDescription_notificationViewer"
        android:ems="10"
        android:singleLine="true"
         />

</RelativeLayout>